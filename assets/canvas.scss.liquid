/*============================================================================
  Responsive tables, defined with .table on table element.
==============================================================================*/

@include media-query('mobile-only') {
  .table{
    thead {
      display: none;
    }

    tr {
      display: block;
    }

    // IE9 table layout fixes
    tr,
    td {
      float: left;
      clear: both;
      width: 100%;
    }

    th,
    td {
      display: block;
      text-align: right;
      padding: $gutter-site / 2;
    }

    td:before {
      content: attr(data-label);
      float: left;
      text-align: center;
      font-size: 12px;
      padding-right: 10px;
    }
  }

  //TODO: update to use `desktop--hide` or whatever once our grid is built
  .table--small-hide {
    display: none !important;
  }

  .table__row + .table__row {
    position: relative;
    margin-top: 10px;
    padding-top: $gutter-site / 2;

    &:after {
      content: '';
      display: block;
      position: absolute;
      top: 0;
      left: $gutter-site / 2;
      right: $gutter-site / 2;
      border-bottom: 1px solid $color-border;
    }
  }
}

