// The `$grid-breakpoints` list is used to build our media queries.  You can use
// these in the media-queries mixin or as modifiers to your grid classes to
// target specific breakpoint.  i.e. `.tablet-down--grid-6` will target screen
// widths below the value set by `$grid-tablet`
$grid-breakpoints: (
  'mobile-only' '(max-width: #{$grid-tablet - 1})',
  'tablet-only' '(min-width: #{$grid-tablet}) and (max-width: #{$grid-desktop - 1})',
  'tablet-up' '(min-width: #{$grid-tablet})',
  'desktop-up' '(min-width: #{$grid-desktop})',
  'widescreen-only' '(min-width: #{$grid-widescreen})'
);

$grid-breakpoint-has-widths: ('mobile-only', 'tablet-only', 'tablet-up', 'desktop-up', 'widescreen-only');
$grid-breakpoint-has-push:  ('tablet-only', 'tablet-up', 'desktop-up', 'widescreen-only');

/*============================================================================
  #Grid Setup
    - Based on csswizardry grid, but with floated columns, a fixed gutter size, and BEM classes
    - Breakpoints defined above, under #Grid Variables
    - `.grid--uniform` is used to take care of clearfixes on evenly sized
    `.grid__items`
==============================================================================*/

/* Force clearfix on grids */
.grid,
.grid--uniform {
  @include clearfix;
}

@mixin media-query($media-query) {
  $breakpoint-found: false;

  @each $breakpoint in $grid-breakpoints {
    $name: nth($breakpoint, 1);
    $declaration: nth($breakpoint, 2);

    @if $media-query == $name and $declaration {
      $breakpoint-found: true;

      @media only screen and #{$declaration} {
        @content;
      }
    }
  }

  //allow the use of custom media queries passed in as strings
  @if $breakpoint-found == false {
    @media only screen and #{$media-query} {
        @content;
      }
  }
}

/*============================================================================
  Grid Setup
    1. Allow the grid system to be used on lists.
    2. Remove any margins and paddings that might affect the grid system.
    3. Apply a negative `margin-left` to negate the columns' gutters.
==============================================================================*/
.grid,
.grid--uniform {
  list-style: none;
  margin: 0;
  padding: 0;
  margin-left: -$grid-gutter;
}

.grid__item {
  float: left;
  min-height: 1px;
  padding-left: $grid-gutter;
  width: 100%;
}

/*============================================================================
  Reversed grids allow you to structure your source in the opposite
  order to how your rendered layout will appear.
==============================================================================*/
.grid--rev {
  @extend .grid;
  direction: rtl;
  text-align: left;

  > .grid__item {
    direction: ltr;
    text-align: left;
    float: right;
  }
}

/* Gutterless grids have all the properties of regular grids, minus any spacing. */
.grid--no-gutter {
  @extend .grid;
  margin-left: 0;

  > .grid__item {
    padding-left: 0;
  }
}

/*============================================================================
  WIDTHS
    - Create width classes, prefixed by the specified namespace.
==============================================================================*/
@mixin grid-device-type($grid-namespace:"") {

  .#{$grid-namespace}grid-1  {
    width: 8.333%;
  }

  .#{$grid-namespace}grid-2  {
    width: 16.666%;
  }

  .#{$grid-namespace}grid-3  {
    width: 25%;
  }

  .#{$grid-namespace}grid-4  {
    width: 33.333%;
  }

  .#{$grid-namespace}grid-5  {
    width: 41.666%
  }

  .#{$grid-namespace}grid-6  {
    width: 50%;
  }

  .#{$grid-namespace}grid-7  {
    width: 58.333%;
  }

  .#{$grid-namespace}grid-8  {
    width: 66.666%;
  }

  .#{$grid-namespace}grid-9  {
    width: 75%;
  }

  .#{$grid-namespace}grid-10 {
    width: 83.333%;
  }

  .#{$grid-namespace}grid-11 {
    width: 91.666%;
  }

  .#{$grid-namespace}grid-12 {
    width: 100%;
  }

}

/*================ Clearfix helper on uniform grids ================*/
@mixin grid-clearfix-helper($grid-namespace:"") {
  .grid--uniform {
    .#{$grid-namespace}grid-1:nth-child(12n+1),
    .#{$grid-namespace}grid-2:nth-child(6n+1),
    .#{$grid-namespace}grid-3:nth-child(4n+1),
    .#{$grid-namespace}grid-4:nth-child(3n+1),
    .#{$grid-namespace}grid-6:nth-child(2n+1)    { clear: both; }
  }
}

/*================ Helper show/hide classes around our breakpoints ================*/
@mixin grid-device-helper($grid-namespace:"") {
  .#{$grid-namespace}show {
    display: block!important;
  }

  .#{$grid-namespace}hide {
    display: none!important;
  }


  .#{$grid-namespace}text-left {
    text-align: left!important;
  }

  .#{$grid-namespace}text-right {
    text-align: right!important;
  }

  .#{$grid-namespace}text-center {
    text-align: center!important;
  }


  .#{$grid-namespace}float-left {
    float: left!important;
  }

  .#{$grid-namespace}float-right {
    float: right!important;
  }

}

/*================ Our regular, non-responsive width and helper classes ================*/
@include grid-device-type();
@include grid-device-helper();

/*================ Our responsive classes ================*/
@each $breakpoint in $grid-breakpoint-has-widths {
  @include media-query($breakpoint) {
    @include grid-device-type('#{$breakpoint}--');
    @include grid-device-helper('#{$breakpoint}--');
    @include grid-clearfix-helper('#{$breakpoint}--');
  }
}

/*============================================================================
  PUSH
    - Push classes, to move grid items over to the right by certain amounts
==============================================================================*/
@mixin grid-push-setup($grid-namespace: "") {

  .push--#{$grid-namespace}grid-1 {
    left: 8.333%;
  }

  .push--#{$grid-namespace}grid-2 {
    left: 16.666%;
  }

  .push--#{$grid-namespace}grid-3 {
    left: 25%;
  }

  .push--#{$grid-namespace}grid-4 {
    left: 33.333%;
  }

  .push--#{$grid-namespace}grid-5 {
    left: 41.666%;
  }

  .push--#{$grid-namespace}grid-6 {
    left: 50%;
  }

  .push--#{$grid-namespace}grid-7 {
    left: 58.333%;
  }

  .push--#{$grid-namespace}grid-8 {
    left: 66.666%;
  }

  .push--#{$grid-namespace}grid-9 {
    left: 75%;
  }

  .push--#{$grid-namespace}grid-10 {
    left: 83.333%;
  }

  .push--#{$grid-namespace}grid-11 {
    left: 91.666%;
  }

  .push--#{$grid-namespace}grid-12 {
    left: 100%;
  }

}

[class*="push--"] {
  position:relative;
}

@include grid-push-setup();

@each $breakpoint in $grid-breakpoint-has-push {
  @include media-query($breakpoint) {
    @include grid-push-setup('#{$breakpoint}--');
  }
}

