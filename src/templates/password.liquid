{% layout none %}
<!doctype html>
<!--[if lt IE 9]> <html class="no-js lt-ie9" lang="{{ shop.locale }}"> <![endif]-->
<!--[if IE 9]> <html class="ie9 no-js" lang="{{ shop.locale }}"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html class="modern no-js" lang="{{ shop.locale }}"> <!--<![endif]-->
<head>
    <meta charset="UTF-8">
    <title>
      {{ page_title }}{% if current_tags %}{% assign meta_tags = current_tags | join: ', ' %} &ndash; {{ 'general.meta.tags' | t: tags: meta_tags }}{% endif %}{% if current_page != 1 %} &ndash; {{ 'general.meta.page' | t: page: current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}
    </title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <meta name="theme-color" content="{{ settings.color_primary }}">

    {% if settings.favicon_enable %}
      <link rel="shortcut icon" href="{{ 'favicon.png' | asset_url }}" type="image/png" />
    {% endif %}

    <link rel="canonical" href="{{ canonical_url }}">

    <meta property="og:type" content="website">
    <meta property="og:title" content="{{ page_title }}">
    {% if settings.logo_use_image %}
      <meta property="og:image" content="http:{{ 'logo.png' | asset_url }}">
      <meta property="og:image:secure_url" content="https:{{ 'logo.png' | asset_url }}">
    {% endif %}

    {% if page_description %}
      <meta property="og:description" content="{{ page_description | escape }}">
    {% endif %}

    <meta property="og:url" content="{{ canonical_url }}">
    <meta property="og:site_name" content="{{ shop.name }}">

    {% comment %}
      Twitter user name of the site, based on theme settings
    {% endcomment %}
    {% if settings.social_twitter_link != blank %}
      <meta name="twitter:site" content="@{{ settings.social_twitter_link | split: 'twitter.com/' | last }}">
    {% endif %}

    {{ content_for_header }}

    <!-- CSS ================================================== -->
    {{ 'shop.scss.css' | asset_url | stylesheet_tag }}

    <!-- Google Fonts | from theme settings ================================================== -->
    {% if settings.type_base_family contains 'Google' %}
      {% assign type_base_parts = settings.type_base_family | split: '_' %}
      {% capture base_google_url %}{{ type_base_parts[1] }}:400,700{% endcapture %}
      {{ '//fonts.googleapis.com/css?family=' | append: base_google_url | stylesheet_tag }}
    {% endif %}
    {% if settings.type_accent_family contains 'Google' %}
      {% unless settings.type_accent_family contains type_base_parts[1] %}
        {% assign type_accent_parts = settings.type_accent_family | split: '_' %}
        {% capture accent_google_url %}{{ type_accent_parts[1] }}:400,700{% endcapture %}
        {{ '//fonts.googleapis.com/css?family=' | append: accent_google_url | stylesheet_tag }}
      {% endunless %}
    {% endif %}

    <!-- HTML5 fixes for old IE ================================================== -->
    <!--[if lt IE 9]>
    {{ '//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js' | script_tag }}
    <![endif]-->

    <!-- JS ================================================== -->
    {{ 'modernizr.min.js' | asset_url | script_tag }}
    {{ '//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js' | script_tag }}

  </head>

  <body class="template-password">
    <div class="text-center">
      <header role="banner">
        <div class="password-logo">
          {% if settings.logo_use_image %}
            <img class="logo" src="{{ 'logo.png' | asset_url }}" alt="{{ shop.name }}" itemprop="logo">
          {% else %}
            <h1>
              <span>{{ shop.name }}</span>
            </h1>
          {% endif %}
        </div>
      </header>

      <div class="password-main" role="main">
        <h2>{{ 'general.password_page.opening_soon' | t }}</h2>

        {% comment %}
          Password message which you can edit on /admin/online_store/preferences
        {% endcomment %}
        {% unless shop.password_message == blank %}
          <p class="password-message">
            {{ shop.password_message }}
          </p>
        {% endunless %}

        {% comment %}
          Signup form
        {% endcomment %}
        <div class="password-signup-form">
          {% form 'customer' %}
            {{ form.errors | default_errors }}
            {% if form.posted_successfully? %}
              <ul class="form-success">
                <li>{{ 'general.password_page.signup_form_success' | t }}</li>
              </ul>
            {% else %}
              <h4>{{ 'general.password_page.signup_form_heading' | t }}</h4>
              <input type="hidden" name="contact[tags]" value="prospect, password page">
              <label for="email" class="label--hidden">{{ 'general.password_page.signup_form_email_label' | t }}</label>
              <input type="email" name="contact[email]" id="Email" placeholder="{{ 'general.password_page.signup_form_email_placeholder' | t }}">
              <button type="submit" name="commit" class="btn">
                {{ 'general.password_page.signup_form_submit' | t }}
              </button>
            {% endif %}
          {% endform %}
        </div>

        {% comment %}
          Share homepage URL
          Shared text is from the store meta description
        {% endcomment %}
        {% if settings.share_facebook or settings.share_twitter or settings.share_google %}
          <div class="password-social-sharing">
            <p>{{ 'general.password_page.spread_the_word' | t }}</p>
            {% include 'social-sharing' %}
          </div>
        {% endif %}

        {% comment %}
          Link to password form
        {% endcomment %}
        <p class="password-login__link">
          <a href="#LoginModal">
            {{ 'general.password_page.password_link' | t }} &rarr;
          </a>
        </p>
      </div>

      <footer class="password-footer" role="contentinfo">
        {% capture shopify %}
          <a class="password__shopify-link" href="//www.shopify.com" target="_blank" title="Create your own online store with Shopify">
            {% include 'svg-definitions' with 'shopify-logo' %}
            <span class="password__shopify-name">Shopify</span>
          </a>
        {% endcapture %}
        {{ 'general.password_page.powered_by_shopify_html' | t: shopify: shopify }}
      </footer>
    </div>

    <div id="LoginModal" class="password-login text-center">
      <h4>{{ 'general.password_page.login_form_heading' | t }}</h4>
      <div class="password-login__form">
        {% form 'storefront_password' %}
          {{ form.errors | default_errors }}
          <label for="password" class="label--hidden">{{ 'general.password_page.login_form_password_label' | t }}</label>
          <input type="password" name="password" id="Password" placeholder="{{ 'general.password_page.login_form_password_placeholder' | t }}">
          <button type="submit" name="commit" class="btn">
            {{ 'general.password_page.login_form_submit' | t }}
          </button>
        {% endform %}
        <p>{{ 'general.password_page.admin_link_html' | t }}</p>
      </div>
    </div>

  </body>
</html>
