{% comment %}
  The password message can be edited in the admin at /admin/online_store/preferences.

  The share buttons share the home page URL. The share text is grabbed from the store
  meta description.
{% endcomment %}

{% layout 'password' %}

<h2>{{ 'general.password_page.opening_soon' | t }}</h2>

{% unless shop.password_message == blank %}
  <p class="password-message">
    {{ shop.password_message }}
  </p>
{% endunless %}

{% form 'customer' %}

  {{ form.errors | default_errors }}

  {% if form.posted_successfully? %}
    <ul class="form-success">
      <li>{{ 'general.password_page.signup_form_success' | t }}</li>
    </ul>
  {% else %}
    <h4>{{ 'general.password_page.signup_form_heading' | t }}</h4>
    <input type="hidden" name="contact[tags]" value="prospect, password page">
    <label for="email" class="label--hidden">{{ 'general.password_page.signup_form_email_label' | t }}</label>
    <input type="email" name="contact[email]" id="Email" placeholder="{{ 'general.password_page.signup_form_email_placeholder' | t }}">
    <button type="submit" name="commit" class="btn">
      {{ 'general.password_page.signup_form_submit' | t }}
    </button>
  {% endif %}
{% endform %}

{% if settings.share_facebook or settings.share_twitter or settings.share_google %}
  <div class="password-social-sharing">
    <p>{{ 'general.password_page.spread_the_word' | t }}</p>
    {% include '__social-sharing' %}
  </div>
{% endif %}

<p>
  <a href="#Login">
    {% include 'icon-lock' %}
    {{ 'general.password_page.password_link' | t }} &rarr;
  </a>
</p>
