{
  "extends": [
    "plugin:shopify/prettier",
    "plugin:shopify/node",
    "plugin:shopify/jquery"
  ],
  "env": {
    "jest": true
  },
  "rules": {
    "import/no-anonymous-default-export": 0,
    "func-style": ["warn", "declaration", {"allowArrowFunctions": true}],
    "import/no-unresolved": ["error", {"ignore": ["^jquery$"]}]
  },
  "globals": {
    "document": true,
    "theme": true,
    "Shopify": true,
    "window": true
  }
}
